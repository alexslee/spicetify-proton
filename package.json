  "dependencies": {
    "proton-native": "^1.1.3",
    "ts-node": "^6.0.5"
  },
  "devDependencies": {
    "@types/color-string": "^1.5.0",
    "@types/color": "^3.0.0",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.4",
    "@types/proton-native": "^1.1.0",
    "@types/react": "^16.3.13",
    "electron-builder": "^20.11.1",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "typescript": "^2.9"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true,
    "testRegex": "((test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
