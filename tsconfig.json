{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",

    "outDir": "./build",

    "strict": true,
    "strictNullChecks": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": false,
    "noImplicitReturns": true,

    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}